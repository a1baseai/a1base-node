{
  "compilerOptions": {
    "target": "ES6",                    // or "ES2020", etc. as you prefer
    "module": "commonjs",
    "outDir": "dist",                   // compiled output goes here
    "declaration": true,                // generate .d.ts definitions
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
